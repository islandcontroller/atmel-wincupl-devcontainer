{
  "name": "Atmel WinCUPL",
  
  // Build image locally from provided Dockerfile
  "build": {
    "context": "../../",
    "dockerfile": "../../Dockerfile"
  },

  // Pre-configure settings and extensions
  "customizations": {
    "vscode": {
      "settings": {        
        "editor.insertSpaces": true,
        "editor.rulers": [80],
        "editor.tabSize": 2
      },
      "extensions": [
        "keroc.hex-fmt",
        "tlgkccampbell.code-cupl",
        "tomoki1207.pdf"
      ]
    }
  }
}